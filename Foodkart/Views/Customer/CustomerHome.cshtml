@model List<Foodkart.Food>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomerHome</title>
</head>
<body>
    <style type="text/css">
        .card {
            box-shadow: 0 4px 8px 0 #8D8D8D;
            border-radius: 5px;
            transition: 0.3s;
            padding: 20px;
            width: 800px;
            height: 240px;
            position: relative;
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
            background-color: #FFFFFF;
        }

        .input-group {
            position: relative;
        }

            .input-group .input-area {
                border: 1px solid #03A9F4;
                padding: 16px 12px;
                font-size: 20px;
                width: 80px;
                height: 20px;
                text-align: center;
                border-radius: 5px;
            }

                .input-group .input-area:focus {
                    border: 0px solid #03A9F4;
                }

                    .input-group .input-area:focus + .label {
                        top: -8px;
                        padding: 0 3px;
                        font-size: 20px;
                        color: #03A9F4;
                        border-radius: 5px;
                    }

            .input-group .label {
                color: #8D8D8D;
                position: absolute;
                top: 20px;
                left: 13px;
                background: #FFFFFF;
                transition: 0.3s;
                border-radius: 5px;
            }

            .input-group .input-area:valid + .label {
                top: -8px;
                padding: 0 3px;
                font-size: 16px;
                color: #03A9F4;
                border-radius: 5px;
            }

        .blue-button {
            font-size: 20px;
            border-radius: 8px;
            padding: 10px 8px;
            background-color: #03A9F4;
            color: #FFFFFF;
            text-decoration: none;
        }

            .blue-button:hover {
                background-color: #01579B;
                color: #FFFFFF;
                transition: 0.8s;
                text-decoration: none;
            }

        .blue-link {
            font-size: 18px;
            color: #03A9F4;
            text-decoration: none;
        }

        body {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }
    </style>
    <script type="text/javascript">
        function updateQty() {
            var qty = document.getElementById("FoodQty").value;
            alert(qty);
            @Session["FoodQty"] = qty; 
        }
    </script>
    @using (Html.BeginForm("CustomerHome", "Customer", FormMethod.Post))
    {

        <header>
            @Html.Partial("~/Views/Shared/_Header.cshtml");
        </header>
        <h2>Welcome, @ViewBag.CustFName</h2>
        <a href="~/Auth/Login" class="blue-button">Sign-Out</a>
        <br />
        <br />
        if (ViewBag.Status == "success")
        {
            <div>
                <h4>Items Added to Cart Successfully</h4>
            </div>
            <br />
            <br />
        }
        foreach (Food food in @Model)
        {
            <div class="card">
                <h1>@food.FoodName</h1>
                <h2>&#8377 @food.FoodUnitPrice  (@food.FoodCategory)</h2>
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input type="number" id="FoodQty" name="FoodQty" min="0" max="@food.FoodQty" class="input-area" />
                                <label for="FoodQty" class="label">Quantity</label>
                            </div>
                        </td>
                    </tr>
                </table>
                <table align="center">
                    <tr>
                        <td style="position: absolute; margin-left: -200px;"><a href="/Auth/Registration" class="blue-link">Remove from Cart</a></td>
                        <td style="position: absolute; margin-left: 110px;"><a href="@Url.Action("AddToCart","Customer", new { foodId = food.FoodId, foodUnitPrice = food.FoodUnitPrice })" class="blue-button" onclick="updateQty()">Add to Cart</a></td>
                    </tr>
                </table>
            </div>
        }
    }
</body>
</html>
