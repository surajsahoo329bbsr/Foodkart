@model Foodkart.Customer

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomerProfile</title>
</head>
<body>
    <div class="card_form">
        <h2 style="font-size:40px; text-align:center;">Update Profile</h2>
        @using (Html.BeginForm("CustomerProfile", "Customer", FormMethod.Post))
        {
            <input type="text" id="CustId" name="CustId" value="@Model.CustId" hidden/>
            <table align="center">
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="CustFName" name="CustFName" pattern="^[a-zA-Z]{1,20}$" class="input-area"  value="@Model.CustFName" required />
                            <label for="CustFName" class="label">First Name</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="CustLName" name="CustLName" pattern="^[a-zA-Z]{1,20}$" class="input-area" value="@Model.CustLName" required />
                            <label for="CustLName" class="label">Last Name</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="CustEmail" name="CustEmail" pattern="^([a-zA-Z0-9_\-\.]+)\u0040([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$" class="input-area" value="@Model.CustEmail" required />
                            <label for="CustEmail" class="label">Email</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="CustPhone" name="CustPhone" pattern="^[789]{1}[0-9]{9}$" class="input-area" value="@Model.CustPhone" required />
                            <label for="CustPhone" class="label">Phone</label>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="horizontal-flex-container" style="margin-bottom:40px; margin-top:40px;">
                <a href="#" class="blue-button" style="position:relative; text-align:center; width:400px;" onclick="this.closest('form').submit();">Update</a>
            </div>
        }
    </div>
</body>
</html>
