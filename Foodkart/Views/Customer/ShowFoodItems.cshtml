@model List<Foodkart.Food>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowFoodItems</title>
    @Html.Partial("~/Views/Shared/_Header.cshtml");
</head>
<body>
    <style type="text/css">

        table {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            margin-top: 150px;
            box-shadow: 5px;
            font-size: 20px;
            background-color: #FFFFFF;
        }

        tr, td, th {
            border: 1px solid black;
            padding: 10px;
        }

        .card {
            box-shadow: 0 4px 8px 0 #8D8D8D;
            border-radius: 5px;
            transition: 0.3s;
            padding: 20px;
            width: 800px;
            height: 240px;
            position: relative;
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
            background-color: #FFFFFF;
        }

        .input-group {
            position: relative;
        }

            .input-group .input-area {
                border: 1px solid #03A9F4;
                padding: 16px 12px;
                font-size: 20px;
                width: 80px;
                height: 20px;
                text-align: center;
                border-radius: 5px;
            }

                .input-group .input-area:focus {
                    border: 0px solid #03A9F4;
                }

                    .input-group .input-area:focus + .label {
                        top: -8px;
                        padding: 0 3px;
                        font-size: 20px;
                        color: #03A9F4;
                        border-radius: 5px;
                    }

            .input-group .label {
                color: #8D8D8D;
                position: absolute;
                top: 20px;
                left: 13px;
                background: #FFFFFF;
                transition: 0.3s;
                border-radius: 5px;
            }

            .input-group .input-area:valid + .label {
                top: -8px;
                padding: 0 3px;
                font-size: 16px;
                color: #03A9F4;
                border-radius: 5px;
            }

        .blue-button {
            font-size: 20px;
            border-radius: 8px;
            padding: 10px 8px;
            background-color: #03A9F4;
            color: #FFFFFF;
            text-decoration: none;
        }

            .blue-button:hover {
                background-color: #01579B;
                color: #FFFFFF;
                transition: 0.8s;
                text-decoration: none;
            }

        .blue-link {
            font-size: 18px;
            color: #03A9F4;
            text-decoration: none;
        }

        body {
            background-color: lightgrey;
            margin: 0;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }
    </style>

    <h2>Menus</h2>

    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <th>Menu Name</th>
                <th>Food Category</th>
                <th>Food Unit Price</th>
                <th>Available Quantity</th>
                <th>Food Type</th>
                <th>Add To Cart</th>
            </tr>
            @foreach (Food food in @Model)
            {
                <tr>
                    <td>@food.FoodName</td>
                    <td>@food.FoodCategory</td>
                    <td>Rs @food.FoodUnitPrice</td>
                    <td>@food.FoodQty</td>
                    @if (food.FoodType == "V")
                    {
                        <td>Veg</td>
                    }
                    else if (food.FoodType == "N")
                    {
                        <td>Non-Veg</td>
                    }
                    else
                    {
                        <td>Egg</td>
                    }
                    <td><a href="@Url.Action("AddToCart","Customer", new { foodId = food.FoodId })" class="blue-link">Add</a></td>
                </tr>
            }
        </table>
    }
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    @Html.Partial("~/Views/Shared/_Footer.cshtml")
</body>
</html>
