@model Foodkart.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminRegistration</title>
</head>
<body>
    <style type="text/css">
        h4 {
            font-size: 24px;
        }

        .card {
            box-shadow: 0 4px 8px 0 #8D8D8D;
            border-radius: 5px;
            transition: 0.3s;
            padding: 20px;
            width: 500px;
            height: 800px;
            margin-top:10px;
            margin-bottom:180px;
            position: relative;
            margin-left: auto;
            margin-right:auto;
            background-color: #FFFFFF;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            transition: background-color 5000s ease-in-out 0s;
        }

        .input-group {
            position: relative;
        }

            .input-group .input-area {
                border: 1px solid #03A9F4;
                padding: 16px 12px;
                font-size: 20px;
                width: 400px;
                height: 24px;
                border-radius: 5px;
            }

                .input-group .input-area:focus {
                    border: 0px solid #03A9F4;
                }

                    .input-group .input-area:focus + .label {
                        top: -8px;
                        padding: 0 3px;
                        font-size: 20px;
                        color: #03A9F4;
                        border-radius: 5px;
                    }

            .input-group .label {
                color: #8D8D8D;
                position: absolute;
                top: 20px;
                left: 13px;
                background: #FFFFFF;
                transition: 0.3s;
                border-radius: 5px;
            }

            .input-group .input-area:valid + .label {
                top: -8px;
                padding: 0 3px;
                font-size: 16px;
                color: #03A9F4;
                border-radius: 5px;
            }

        .blue-link {
            font-size: 24px;
            color: #03A9F4;
            text-decoration: none;
        }

            .blue-link:hover {
                color: #01579B;
                transition: 0.8s;
                text-decoration: none;
            }

        .blue-button {
            font-size: 24px;
            border-radius: 8px;
            padding: 14px 12px;
            background-color: #03A9F4;
            color: #FFFFFF;
            text-decoration: none;
        }

            .blue-button:hover {
                background-color: #01579B;
                color: #FFFFFF;
                transition: 0.8s;
                text-decoration: none;
            }

        body {
            background-color: lightgrey;
            margin: 0;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

    </style>
    <script type="text/javascript">
        function validatePassword() {
            var password = document.getElementById("AdminPassword").value;
            var confirmPassword = document.getElementById("ConfirmPassword").value;
            if (password != confirmPassword) {
                alert("Password and Confirm Password Fields Do Not Match !");
                return false;
            }
            return true;
        }
    </script>
    <img src="~/Logos/logo.png" style="position:relative; margin-left:auto; height:100px; width:250px;" />
    <div class="card">
        <h2 style="text-align:center; font-size:50px;">Registration</h2>
        @using (Html.BeginForm("AdminRegistration", "AdminAuth", FormMethod.Post, new { onsubmit = "return validatePassword();" }))
        {
            <table align="center">
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="AdminFName" name="AdminFName" pattern="^[a-zA-Z]{1,20}$" class="input-area" required />
                            <label for="AdminFName" class="label">First Name</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="AdminLName" name="AdminLName" pattern="^[a-zA-Z]{1,20}$" class="input-area" required />
                            <label for="AdminLName" class="label">Last Name</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="AdminUsername" name="AdminUsername" pattern="^(?=[a-z0-9._]{6,30}$)(?!.*[_.]{2})[^_.].*[^_.]$" class="input-area" required />
                            <label for="AdminUsername" class="label">Username</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="AdminPhone" name="AdminPhone" pattern="^[789]{1}[0-9]{9}$" class="input-area" required />
                            <label for="AdminPhone" class="label">Phone</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="number" id="AdminMenuId" name="AdminMenuId" class="input-area" required />
                            <label for="AdminMenuId" class="label">Branch Id</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="password" id="AdminPassword" name="AdminPassword" pattern="^[a-zA-Z0-9]{8,20}$" required class="input-area" />
                            <label for="AdminPassword" class="label">Password</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" pattern="^[a-zA-Z0-9]{8,20}$" required class="input-area" />
                            <label for="ConfirmPassword" class="label">ConfirmPassword</label>
                        </div>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <table align="center">
                <tr><td> </td> <td> </td></tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td style="position: absolute; margin-left: -210px;"><a href="AdminLogin" class="blue-link">Login</a></td>
                    <td style="position: absolute; margin-left: 110px;"><a href="#" class="blue-button" onclick="this.closest('form').submit(); return validatePassword();">Sign-Up</a></td>
                </tr>
            </table>
        }
        <br />
        <br />
        @if (Model.AdminUsername == "AdminInvalid")
        {
            <div style="text-align:center">
                <h4>Invalid form entries</h4>
            </div>
        }
        @if (Model.AdminUsername == "AdminRegistered")
        {
            <div style="text-align:center">
                <h4>Registration Successful</h4>
            </div>
        }
        @if (Model.AdminUsername == "AdminExists")
        {
            <div style="text-align:center">
                <h4>Admin already exists. Please Login.</h4>
            </div>
        }
    </div>
    @Html.Partial("~/Views/Shared/_Footer.cshtml")
</body>
</html>
