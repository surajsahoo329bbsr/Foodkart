<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminLayout</title>
</head>
<body>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        @@font-face {
            font-family: MyFont;
            src: url(../fonts/Montserrat-Medium.ttf);
        }

        .danger-div {
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            width: 420px;
            border: 1px solid red;
            border-radius: 5px;
            color: red;
            background-color: #FFCCCB
        }

            .danger-div p {
                color: red;
            }

        .success-div {
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            width: 420px;
            border: 1px solid green;
            border-radius: 5px;
            color: red;
            background-color: #BCF5BC;
        }

            .success-div p {
                color: green;
            }

        .blue_links {
            list-style: none;
        }

            .blue_links h2 a {
                color: #03A9F4;
            }

                .blue_links h2 a:hover {
                    transition: all 0.3s ease 0s;
                    color: #0077C2;
                }

        p span {
            display: block;
        }

        .horizontal-flex-container {
            display: flex;
            flex-flow: row nowrap;
            justify-content: center;
            margin: 10px;
            text-align:center;
        }

        .card-footer {
            padding: 20px;
            width: 100%;
            height: auto;
            position: fixed;
            bottom: 0;
            background-color: black;
            text-align: center;
            font-family: MyFont, sans-serif;
            font-weight: 500;
            font-size: 24px;
            font-weight: bold;
        }

        .card_form {
            border: 2px solid black;
            transition: 0.3s;
            padding: 40px;
            width: 450px;
            margin-top: 150px;
            margin-bottom: 180px;
            height: auto;
            position: relative;
            margin-left: auto;
            margin-right: auto;
            background-color: #FFFFFF;
        }

        .img-card {
            border-radius: 5px;
            border: 2px solid black;
            transition: 0.3s;
            width: 200px;
            height: 200px;
            position: absolute;
            margin-left: 575px;
            margin-top: -120px;
        }

        .card {
            border: 2px solid black;
            padding: 40px;
            width: 800px;
            height: auto;
            margin-top: 150px;
            margin-bottom: 180px;
            position: relative;
            margin-left: auto;
            margin-right: auto;
            background-color: #FFFFFF;
        }


        .blue-button-header {
            font-size: 22px;
            border-radius: 8px;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 10px;
            padding-bottom: 10px;
            background-color: #03A9F4;
            color: #FFFFFF;
            text-decoration: none;
        }

            .blue-button-header:hover {
                background-color: #01579B;
                color: #FFFFFF;
                transition: 0.8s;
                text-decoration: none;
            }

        body {
            margin: 0;
            background-color: white;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }
    </style>
    <script>
        function PreventBack() {
            window.history.forward();
        }
        setTimeout("PreventBack()", 0);
        window.onunload = function () { null };
    </script>
    <header style="width:100%;">
        <img src="~/Logos/admin_logo.png" width="200" class="logo" />
        <nav>
            <ul class="nav_links">
                <li><a href="@Url.Action("AdminHome","Admin", Session["AdminModel"])">Home</a></li>
                <li><a href="@Url.Action("AdminManageItems","Admin", Session["AdminModel"]))">Manage Items</a></li>
                <li><a href="@Url.Action("AdminCustOrders","Admin", Session["AdminModel"]))">Customer Orders</a></li>
            </ul>
        </nav>
        <ul class="nav_links">
            <li><a href="@Url.Action("AdminProfile","Admin", Session["AdminModel"]))">@Session["AdminFName"]</a></li>
        </ul>
        <a href="~/AdminAuth/AdminIndex" class="blue-button-header" onclick="PreventBack();">Sign-Out</a>
    </header>
    @RenderBody()
    <footer class="card-footer">
        <p style="color:white">Foodkart. All rights reserved @@2020</p>
    </footer>
</body>
</html>
