@model Foodkart.Food

@{
    ViewBag.Title = "UpdateItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateItem</h2>

<body>   
    <div class="card_form">
        <h2 style="text-align:center; font-size:40px;">Update Food Item</h2>
        @using (Html.BeginForm("UpdateItem", "Admin", FormMethod.Post))
        {
            <input type="text" id="FoodId" name="FoodId" value="@Model.FoodId" hidden />
            <table align="center">
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="FoodName" name="FoodName" class="input-area" value="@Model.FoodName" required />
                            <label for="FoodName" class="label">Food Name</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="number" id="FoodUnitPrice" name="FoodUnitPrice" value="@Model.FoodUnitPrice" class="input-area" required />
                            <label for="FoodUnitPrice" class="label">Food Price</label>
                        </div>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td style="text-align:left">
                        <select id="foodCategory" name="foodCategory" style="height:60px; width:100%; font-size:20px; padding:10px;">
                            <option disabled>Select Food Category</option>
                            <option value="@Model.FoodCategory" selected>@Model.FoodCategory</option>
                            <option value="addOns">Add Ons</option>
                            <option value="breads">Breads</option>
                            <option value="cakes">Cakes</option>
                            <option value="chicken">Chicken</option>
                            <option value="desserts">Desserts</option>
                            <option value="divine">Divine</option>
                            <option value="favourite">Favourite</option>
                            <option value="meals">Meals</option>
                            <option value="pizza">Pizza</option>
                            <option value="regular Meal">Regular Meal</option>
                            <option value="rice">Rice</option>
                            <option value="spicy Meals">Spicy Meals</option>
                            <option value="others">Others</option>
                        </select>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td style="text-align:left">
                        <select id="foodType" name="foodType" style="height:60px; width:100%; font-size:20px; padding:10px; ">
                            <option disabled>Select Food Type</option>
                            @{
                                if (Model.FoodType == "V")
                                {
                                    <option value="V" selected>Veg</option>
                                }
                                else if (Model.FoodType == "N")
                                {
                                    <option value="N" >Non-Veg</option>
                                }
                                else
                                {
                                    <option value="E" selected>Egg</option>
                                }
                            }

                            <option value="V">Veg</option>
                            <option value="N">Non-Veg</option>
                            <option value="E">Egg</option>
                        </select>
                    </td>
                </tr>
                <tr><td> </td> <td> </td></tr>
                <tr>
                    <td>
                        <div class="input-group">
                            <input type="text" id="FoodPhotoUrl" name="FoodPhotoUrl" value="@Model.FoodPhotoUrl" required class="input-area" />
                            <label for="FoodPhotoUrl" class="label">Food Photo Url</label>
                        </div>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <table align="center" style="margin-bottom:80px;">
                <tr>
                    <td style="position: absolute; margin-left: 0px;"><a href="AdminLogin" class="blue-link">Back</a></td>
                    <td style="position: absolute; margin-left: 250px;"><a href="#" class="blue-button" onclick="this.closest('form').submit();">Update</a></td>
                </tr>
            </table>
        }
    </div>
</body>