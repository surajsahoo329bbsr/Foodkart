@model List<Foodkart.Food>

@{
    ViewBag.Title = "UpdateDeleteItems";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateDeleteItems</h2>

<body>
    <style type="text/css">
        table {
            font-family: MyFont, sans-serif;
            font-weight: bold;
            border-collapse: collapse;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            margin-top: 50px;
            font-size: 20px;
            background-color: #FFFFFF;
        }
    </style>
    <div class="card">
        <h2 style="font-size:40px;">Update/Delete Food Item</h2>
        <table>
            <tr>
                <th>Food Name</th>
                <th>Food Category</th>
                <th>Food Unit Price</th>
                <th>Available Quantity</th>
                <th>Food Type</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (Food food in @Model)
            {
                <tr>
                    <td>@food.FoodName</td>
                    <td>@food.FoodCategory</td>
                    <td>Rs @food.FoodUnitPrice</td>
                    <td>@food.FoodQty</td>
                    @if (food.FoodType == "V")
                    {
                        <td>Veg</td>
                    }
                    else if (food.FoodType == "N")
                    {
                        <td>Non-Veg</td>
                    }
                    else
                    {
                        <td>Egg</td>
                    }
                    <td><a href="@Url.Action("UpdateItem","Admin", new { foodId = food.FoodId })" class="blue-link">Update</a></td>
                    <td><a href="@Url.Action("DeleteItem","Admin", new { foodId = food.FoodId })" class="blue-link">Delete</a></td>
                </tr>
            }
        </table>
        <br />
    </div>
</body>